<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.kevoree.platform.android.apk</artifactId>
    <packaging>apk</packaging>
    <name>Kevoree :: Platform :: Android :: APK</name>
    <version>1.7.4</version>

    <parent>
        <artifactId>org.kevoree.platform.root</artifactId>
        <groupId>org.kevoree.platform</groupId>
        <version>1.7.4</version>
        <relativePath>../org.kevoree.platform.root/pom.xml</relativePath>
    </parent>

    <properties>
        <android.tools.aapt>${android.home}/platform-tools/aapt</android.tools.aapt>
        <android.tools.dx>${android.home}/platform-tools/dx</android.tools.dx>
        <kevoree.version>${project.version}</kevoree.version>
    </properties>

    <profiles>
        <profile>
            <id>org.kevoree.platform.osgi.android.mac</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <java.lib.location>&lt;java.home&gt;/../Classes/classes.jar</java.lib.location>
            </properties>
        </profile>
        <profile>
            <id>org.kevoree.platform.osgi.android.other</id>
            <activation>
                <os>
                    <family>!mac</family>
                </os>
            </activation>
            <properties>
                <java.lib.location>${java.home}/lib/rt.jar</java.lib.location>
            </properties>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android</artifactId>
            <version>4.0.1.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.actionbarsherlock</groupId>
            <artifactId>library</artifactId>
            <version>3.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.platform</groupId>
            <artifactId>org.kevoree.platform.android.ui</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>${basedir}/target/dex</directory>
            </resource>
        </resources>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                    <artifactId>android-maven-plugin</artifactId>
                    <version>3.1.1</version>
                    <extensions>true</extensions>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <configuration>
                            <tasks>
                                <unzip src="${basedir}/lib/library-3.5.1.zip" dest="${basedir}">
                                    <patternset>
                                        <include name="res/**"/>
                                        <exclude name="AndroidManifest.xml"/>
                                    </patternset>
                                </unzip>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <includes>**\/*.dex</includes>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.kevoree.tools</groupId>
                                    <artifactId>org.kevoree.tools.aether.framework.android</artifactId>
                                    <version>${kevoree.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
                                        ${project.build.directory}/dex/boot/org.kevoree.tools.aether.framework.android
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.kevoree.platform</groupId>
                                    <artifactId>org.kevoree.platform.android.core</artifactId>
                                    <version>${kevoree.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
                                        ${project.build.directory}/dex/boot/org.kevoree.platform.android.core
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.actor</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
                                        ${project.build.directory}/dex/boot/scala.library.android.actor
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.base</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
                                        ${project.build.directory}/dex/boot/scala.library.android.base
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.collection.base</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
                                        ${project.build.directory}/dex/boot/scala.library.android.collection.base
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.collection.immutable</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
                                        ${project.build.directory}/dex/boot/scala.library.android.collection.immutable
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.collection.mutable</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
                                        ${project.build.directory}/dex/boot/scala.library.android.collection.mutable
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.collection.parallel</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
                                        ${project.build.directory}/dex/boot/scala.library.android.collection.parallel
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.runtime</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
                                        ${project.build.directory}/dex/boot/scala.library.android.runtime
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.util</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
                                        ${project.build.directory}/dex/boot/scala.library.android.util
                                    </outputDirectory>
                                </artifactItem>
                            </artifactItems>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>

                </executions>
            </plugin>


            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>
                <configuration>
                    <sdk>
                        <path>${android.home}</path>
                        <platform>13</platform>
                    </sdk>
                    <undeployBeforeDeploy>true</undeployBeforeDeploy>
                    <sign>
                        <debug>auto</debug>
                    </sign>
                </configuration>
                <extensions>true</extensions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>actionbarsherlock</id>
            <url>http://r.jakewharton.com/maven/release/</url>
        </repository>
    </repositories>

</project>
