<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.kevoree.platform.android.apk</artifactId>
    <packaging>jar</packaging>
    <name>Kevoree :: Platform :: Android :: APK</name>
    <version>1.7.0-SNAPSHOT</version>

    <parent>
        <artifactId>org.kevoree.platform.root</artifactId>
        <groupId>org.kevoree.platform</groupId>
        <version>1.7.0-SNAPSHOT</version>
        <relativePath>../org.kevoree.platform.root/pom.xml</relativePath>
    </parent>

    <properties>
        <android.tools.aapt>${android.home}/platform-tools/aapt</android.tools.aapt>
        <android.tools.dx>${android.home}/platform-tools/dx</android.tools.dx>
        <kevoree.version>${project.version}</kevoree.version>
    </properties>

    <profiles>
        <profile>
            <id>org.kevoree.platform.osgi.android.mac</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <java.lib.location>&lt;java.home&gt;/../Classes/classes.jar</java.lib.location>
            </properties>
        </profile>
        <profile>
            <id>org.kevoree.platform.osgi.android.other</id>
            <activation>
                <os>
                    <family>!mac</family>
                </os>
            </activation>
            <properties>
                <java.lib.location>${java.home}/lib/rt.jar</java.lib.location>
            </properties>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android</artifactId>
            <version>4.0.1.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.actionbarsherlock</groupId>
            <artifactId>library</artifactId>
            <version>3.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.platform</groupId>
            <artifactId>org.kevoree.platform.android.ui</artifactId>
            <version>${kevoree.version}</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <configuration>
                            <tasks>
                                <unzip src="${basedir}/lib/library-3.5.1.zip" dest="${basedir}">
                                    <patternset>
                                        <include name="res/**"/>
                                        <exclude name="AndroidManifest.xml"/>
                                    </patternset>
                                </unzip>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <includes>**\/*.dex</includes>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.kevoree.tools</groupId>
                                    <artifactId>org.kevoree.tools.aether.framework.android</artifactId>
                                    <version>${kevoree.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>
                                        ${project.basedir}/src/main/resources/boot/org.kevoree.tools.aether.framework.android
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.kevoree.platform</groupId>
                                    <artifactId>org.kevoree.platform.android.core</artifactId>
                                    <version>${kevoree.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>
                                        ${project.basedir}/src/main/resources/boot/org.kevoree.platform.android.core
                                    </outputDirectory>
                                </artifactItem>


                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.actor</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>
                                        ${project.basedir}/src/main/resources/boot/scala.library.android.actor
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.base</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>
                                        ${project.basedir}/src/main/resources/boot/scala.library.android.base
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.collection.base</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>
                                        ${project.basedir}/src/main/resources/boot/scala.library.android.collection.base
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.collection.immutable</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>
                                        ${project.basedir}/src/main/resources/boot/scala.library.android.collection.immutable
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.collection.mutable</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>
                                        ${project.basedir}/src/main/resources/boot/scala.library.android.collection.mutable
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.collection.parallel</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>
                                        ${project.basedir}/src/main/resources/boot/scala.library.android.collection.parallel
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.runtime</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>
                                        ${project.basedir}/src/main/resources/boot/scala.library.android.runtime
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.scala.android</groupId>
                                    <artifactId>scala.library.android.util</artifactId>
                                    <version>${scala.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>
                                        ${project.basedir}/src/main/resources/boot/scala.library.android.util
                                    </outputDirectory>
                                </artifactItem>
                            </artifactItems>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>

                </executions>
            </plugin>


            <plugin>
                <groupId>com.pyx4me</groupId>
                <artifactId>proguard-maven-plugin</artifactId>
                <version>2.0.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>net.sf.proguard</groupId>
                        <artifactId>proguard</artifactId>
                        <version>4.7-BETA</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
                <configuration>
                    <injar>${project.build.finalName}.jar</injar>
                    <outjar>${project.build.finalName}-small.jar</outjar>
                    <obfuscate>false</obfuscate>
                    <maxMemory>1024m</maxMemory>
                    <options>
                        <option>-keepattributes **</option>
                        <option>-dontnote</option>
                        <option>-dontskipnonpubliclibraryclasses</option>
                        <option>-dontskipnonpubliclibraryclassmembers</option>
                        <option>-dontoptimize</option>
                        <option>-dontobfuscate</option>
                        <option>-ignorewarnings</option>
                        <option>
                            -keepclassmembers class *{
                            static final % *;
                            static final java.lang.String *;
                            }
                        </option>
                        <option>
                            -keepclassmembers class org.kevoree.framework.**
                        </option>
                        <option>-keep public class * extends android.app.Activity</option>
                        <option>-keep public class * extends android.app.Application</option>
                        <option>-keep public class * extends android.app.Service</option>
                        <option>-keep public class * extends
                            android.content.BroadcastReceiver
                        </option>
                        <option>-keep public class * extends
                            android.content.ContentProvider
                        </option>
                        <option>-keep class org.kevoree.platform.android.ui.** { *; }</option>
                    </options>
                    <assembly>
                        <inclusions>
                            <inclusion>
                                <groupId>com.actionbarsherlock</groupId>
                                <artifactId>library</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.kevoree.platform</groupId>
                                <artifactId>org.kevoree.platform.android.ui</artifactId>
                            </inclusion>
                        </inclusions>
                    </assembly>
                    <libs>
                        <lib>${java.lib.location}</lib>
                    </libs>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <id>generate-dex</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${android.tools.dx}</executable>
                            <arguments>
                                <argument>--dex</argument>
                                <argument>--core-library</argument>
                                <argument>--output=${project.build.directory}/classes.dex</argument>
                                <argument>${project.build.directory}/${project.build.finalName}-small.jar</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>maven-android-plugin</artifactId>
                <version>2.8.4</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate-sources</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>package-apk</id>
                        <phase>package</phase>
                        <goals>
                            <goal>apk</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <sdk>
                        <path>${android.home}</path>
                        <platform>13</platform>
                    </sdk>
                    <emulator>
                        <avd>FROYO</avd>
                    </emulator>
                    <deleteConflictingFiles>true</deleteConflictingFiles>
                    <undeployBeforeDeploy>true</undeployBeforeDeploy>
                    <sign>
                        <debug>auto</debug>
                    </sign>
                </configuration>
                <extensions>true</extensions>
            </plugin>


            <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.3.1</version>
                <executions>
                    <execution>
                        <id>install-apk</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>apk</packaging>
                            <groupId>org.kevoree.platform</groupId>
                            <artifactId>org.kevoree.platform.osgi.android</artifactId>
                            <file>${project.build.directory}/${project.build.finalName}.apk</file>
                            <version>${kevoree.version}</version>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.7</version>
                <executions>
                    <execution>
                        <id>deploy-jar-apk</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </execution>
                    <execution>
                        <id>deploy-apk</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy-file</goal>
                        </goals>
                        <configuration>
                            <file>${project.build.directory}/${project.build.finalName}.apk</file>
                            <url>http://maven.kevoree.org/archiva/repository/release/</url>
                            <packaging>apk</packaging>
                            <groupId>org.kevoree.platform</groupId>
                            <artifactId>org.kevoree.platform.osgi.android</artifactId>
                            <version>${kevoree.version}</version>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>actionbarsherlock</id>
            <url>http://r.jakewharton.com/maven/release/</url>
        </repository>
    </repositories>

</project>
