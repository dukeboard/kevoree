                        <plugin>
                            <groupId>org.apache.felix</groupId>
                            <artifactId>maven-bundle-plugin</artifactId>
                            <version>2.3.5</version>
                            <extensions>true</extensions>
                            <configuration>
                                <instructions>
                                    <Bundle-SymbolicName>org.kevoree.tools.aether.framework</Bundle-SymbolicName>
                                    <Import-Package>!org.kevoree.tools.aether.framework.*,*</Import-Package>
                                    <Export-Package>org.kevoree.tools.aether.framework.*,
                                        org.sonatype.*,
                                        org.apache.maven.repository.*,
                                        org.apache.maven.model.*,
                                        org.apache.maven.http.*,
                                        org.apache.maven.artifact.*,
                                        org.apache.commons.*,
                                        org.codehaus.plexus.interpolation.*,
                                        org.codehaus.plexus.util.*,
