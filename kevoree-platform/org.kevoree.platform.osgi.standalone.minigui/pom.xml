                            <inclusion>
                                <groupId>org.kevoree</groupId>
                                <artifactId>org.kevoree.deploy.osgi</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.kevoree</groupId>
                                <artifactId>org.kevoree.kompare</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.kevoree</groupId>
                                <artifactId>org.kevoree.core</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.kevoree</groupId>
                                <artifactId>org.kevoree.remote</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.apache.felix</groupId>
                                <artifactId>org.apache.felix.main</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.apache.felix</groupId>
                                <artifactId>org.apache.felix.shell</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.apache.felix</groupId>
                                <artifactId>org.apache.felix.shell.tui</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.apache.felix</groupId>
                                <artifactId>org.apache.felix.shell.remote</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.restlet.jse</groupId>
                                <artifactId>org.restlet</artifactId>
                            </inclusion>-->
                            <inclusion>
                                <groupId>org.kevoree.platform</groupId>
                                <artifactId>org.kevoree.platform.osgi.standalone.gui</artifactId>
                            </inclusion>


                            <!--
                            <inclusion>
                                <groupId>org.ops4j.pax.url</groupId>
                                <artifactId>pax-url-assembly</artifactId>
                                <filter>!org/apache/commons/**</filter>
                            </inclusion>
                             <inclusion>
                                <groupId>org.ops4j.pax.url</groupId>
                                <artifactId>pax-url-mvn</artifactId>
                                 <filter>!org/apache/commons/**</filter>
                            </inclusion>-->
                        </inclusions>
                    </assembly>
                    <libs>
                        <lib>${java.home}/lib/rt.jar</lib>
                    </libs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>org.kevoree.platform.osgi.standalone.gui.App</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                        <configuration>
                            <jarPath>${project.build.directory}/${project.build.finalName}-small.jar</jarPath>
                            <keystore>${project.build.directory}/../../../keystore</keystore>
                            <alias>kevoree</alias>
                            <storepass>kevoree</storepass>
                            <signedjar>${basedir}/../../../kevoreePages/releases/lib/KevoreeRuntime.jar</signedjar>
                            <verify>true</verify>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>

</project>
