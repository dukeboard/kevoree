<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>org.kevoree.root</artifactId>
    <groupId>org.kevoree</groupId>
    <version>5.0.13-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>org.kevoree.model</artifactId>
  <name>Kevoree :: Model</name>
  <version>5.0.13-SNAPSHOT</version>
  <build>
    <sourceDirectory>metamodel</sourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.kevoree.modeling</groupId>
        <artifactId>org.kevoree.modeling.kotlin.generator.mavenplugin</artifactId>
        <version>${kmf.version}</version>
        <extensions>true</extensions>
        <executions>
          <execution>
            <id>ModelGen</id>
            <phase>process-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <ecore>${metamodel.ecore}</ecore>
              <events>true</events>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.2.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <includes>
            <include>**/*.mm</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.fusesource.mvnplugins</groupId>
        <artifactId>maven-uberize-plugin</artifactId>
        <version>1.34</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>uberize</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
                <transformer>
                  <relocations>
                    <relocation>
                      <pattern>org.kevoree.modeling</pattern>
                      <shadedPattern>org.kevoree.pmodeling</shadedPattern>
                    </relocation>
                  </relocations>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <uberGroupFilter>org.kevoree.modeling</uberGroupFilter>
          <filters>
            <filter>
              <artifact>org.kevoree.modeling:org.modeling.microframework</artifact>
              <excludes>
                <exclude>**/*.kt</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.jetbrains.kotlin</groupId>
      <artifactId>kotlin-stdlib</artifactId>
      <version>0.8.11</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <metamodel.ecore>metamodel/org.kevoree.mm</metamodel.ecore>
  </properties>
</project>

